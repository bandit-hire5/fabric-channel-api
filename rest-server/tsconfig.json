{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "./node_modules/@types",
            "./lib/types"
        ],
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}